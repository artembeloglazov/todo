{% extends 'base.html.twig' %}

{% block title %}Управление календарями{% endblock %}

{% block body %}
    <h1>Управление календарями</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsExport</th>
                <th>createdAt</th>
                <th>updatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.id }}</td>
                <td>{{ calendar.name }}</td>
                <td>{{ calendar.isExport ? 'Yes' : 'No' }}</td>
                <td>{{ calendar.createdAt }}</td>
                <td>{{ calendar.updatedAt }}</td>
                <td>
                    <a href="{{ path('app_calendar_show', {'id': calendar.id}) }}">show</a>
                    <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_calendar_new') }}">Create new</a>
{% endblock %}
